{
  "manifest_version": 2,
  "name": "YTHideIt",
  "version": "2.0",

  "description": "Allow to remove already seen videos from the youtube search results and recommended videos. Threshold can be adjusted.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "webRequest"
  ],

  "browser_action": {
    "default_icon": "icons/icon-96.png",
    "default_title": "YT Hide It",
    "default_popup": "popup/hideItInterface.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ythideit.js"]
    }
  ]
}